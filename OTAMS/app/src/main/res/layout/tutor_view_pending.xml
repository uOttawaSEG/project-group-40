<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_back1"
        android:layout_width="69dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="#E8E8E8"
        android:text="ðŸ "
        android:textColor="@color/UOgray"
        android:textColorHighlight="@color/UOgray"
        android:textColorHint="@color/UOgray"
        android:textColorLink="@color/UOgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/UOred" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pending_recycler"
        android:layout_width="341dp"
        android:layout_height="360dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="28dp"
        android:background="@color/UOgray"
        app:layout_constraintBottom_toTopOf="@+id/btn_back1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutor_pending_header" />

    <TextView
        android:id="@+id/tutor_pending_header"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:text="Pending Requests"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/pending_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>