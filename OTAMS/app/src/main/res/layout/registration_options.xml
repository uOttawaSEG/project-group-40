<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80746C">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="102dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        app:layout_constraintVertical_bias="0.825">

        <Button
            android:id="@+id/returnToHP_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8F001A"
            android:text="Return to Homepage" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="347dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <Button
            android:id="@+id/register_student_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8F001A"
            android:text="Student" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="324dp"
        android:layout_height="90dp"
        android:layout_marginTop="128dp"
        android:text="Register as..."
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:textColorLink="#FFFFFFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/register_tutor_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8F001A"
            android:text="Tutor" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>