<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80746C"
    tools:context=".StudentProfile">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:padding="20dp"
        android:background="#8F001A"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Student Profile!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"
            android:layout_marginBottom="48dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnBooked"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#8F001A"
            android:text="ðŸ“… Booked Sessions"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            app:cornerRadius="12dp"
            app:rippleColor="#FFFFFFFF" />

        <Button
            android:id="@+id/btnRequested"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#8F001A"
            android:text="â³ Requested Sessions"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            app:cornerRadius="12dp"
            app:rippleColor="#FFFFFFFF" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#8F001A"
            android:text="ðŸ” Search for Courses"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="6dp"
            app:cornerRadius="12dp"
            app:rippleColor="#FFFFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_back1"
        android:layout_width="72dp"
        android:layout_height="46dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#E8E8E8"
        android:text="ðŸ "
        android:textColor="@color/UOgray"
        android:textColorHighlight="@color/UOgray"
        android:textColorHint="@color/UOgray"
        android:textColorLink="@color/UOgray"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/UOred" />

</androidx.constraintlayout.widget.ConstraintLayout>