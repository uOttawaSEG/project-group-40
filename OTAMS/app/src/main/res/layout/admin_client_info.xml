<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/admin_title"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:text="You are currently logged in as admin"
        android:textAlignment="center"
        android:textColor="@color/UOred"
        android:textColorHighlight="@color/UOred"
        android:textColorHint="@color/UOred"
        android:textColorLink="@color/UOred"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/information_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354" />

    <TextView
        android:id="@+id/information_title"
        android:layout_width="354dp"
        android:layout_height="76dp"
        android:layout_marginBottom="36dp"
        android:text="Information Page"
        android:textAlignment="center"
        android:textColor="@color/UOred"
        android:textColorHighlight="@color/UOred"
        android:textColorHint="@color/UOred"
        android:textColorLink="@color/UOred"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/admin_title"
        app:layout_constraintBottom_toTopOf="@+id/information_layout"
        app:layout_constraintEnd_toEndOf="@+id/information_layout"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/information_layout" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="362dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_return"
        app:layout_constraintEnd_toEndOf="@+id/btn_return"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/btn_return">

        <Button
            android:id="@+id/button_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/UOred"
            android:text="Go to pending"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:rippleColor="@color/UOred" />

        <Button
            android:id="@+id/button_rejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/UOred"
            android:text="Go to rejected"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:rippleColor="@color/UOred" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:backgroundTint="@color/UOgray"
        android:text="Return To Homepage"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/UOred" />

    <LinearLayout
        android:id="@+id/information_layout"
        android:layout_width="353dp"
        android:layout_height="310dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First name"
            android:textColor="@color/UOred"
            android:textColorHighlight="@color/UOred"
            android:textColorHint="@color/UOred"
            android:textColorLink="@color/UOred"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:textColor="@color/UOred"
            android:textColorHighlight="@color/UOred"
            android:textColorHint="@color/UOred"
            android:textColorLink="@color/UOred"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/UOred"
            android:textColorHighlight="@color/UOred"
            android:textColorHint="@color/UOred"
            android:textColorLink="@color/UOred"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/UOred"
            android:textColorHighlight="@color/UOred"
            android:textColorHint="@color/UOred"
            android:textColorLink="@color/UOred"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textColor="@color/UOred"
            android:textColorHighlight="@color/UOred"
            android:textColorHint="@color/UOred"
            android:textColorLink="@color/UOred"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/other"
            android:id="@+id/Empty"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@+id/Empty"
            >


            <Button
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/accept_hint" />

            <Button
                android:id="@+id/decline_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/decline_hint" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>