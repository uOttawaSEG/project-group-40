<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginBottom="32dp"
        android:text="You are currently logged in as admin"
        android:textAlignment="center"
        android:textColor="@color/UOgray"
        android:textColorHighlight="@color/UOgray"
        android:textColorHint="@color/UOgray"
        android:textColorLink="@color/UOgray"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/title_rejected"
        app:layout_constraintEnd_toEndOf="@+id/title_rejected"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/title_rejected" />

    <TextView
        android:id="@+id/title_rejected"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:text="Pending Requests"
        android:textAlignment="center"
        android:textColor="@color/UOgray"
        android:textColorHighlight="@color/UOgray"
        android:textColorHint="@color/UOgray"
        android:textColorLink="@color/UOgray"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        tools:layout_editor_absoluteY="89dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="363dp"
        android:layout_height="386dp"
        android:background="@color/UOgray"
        app:layout_constraintBottom_toTopOf="@+id/button_goto_rejected"
        app:layout_constraintEnd_toEndOf="@+id/button_goto_rejected"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_goto_rejected"
        app:layout_constraintTop_toBottomOf="@+id/title_rejected"
        app:layout_constraintVertical_bias="0.658">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/button_return_HP"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:backgroundTint="#E8E8E8"
        android:text="Return To Homepage"
        android:textColor="@color/UOgray"
        android:textColorHighlight="@color/UOgray"
        android:textColorHint="@color/UOgray"
        android:textColorLink="@color/UOgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/UOred" />

    <Button
        android:id="@+id/button_goto_rejected"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:backgroundTint="@color/UOred"
        android:text="Go to rejected requests"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_return_HP"
        app:layout_constraintEnd_toEndOf="@+id/button_return_HP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_return_HP"
        app:rippleColor="@color/UOred" />

</androidx.constraintlayout.widget.ConstraintLayout>