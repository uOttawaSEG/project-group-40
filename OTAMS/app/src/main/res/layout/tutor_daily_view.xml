        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAddAvailability"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8F001A"
            android:text="@string/add_availability_button" />

        <Button
            android:id="@+id/btnViewUpcoming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8F001A"
            android:text="@string/view_upcoming_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/monthDayHeaders"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        app:layout_constraintBottom_toTopOf="@+id/dailyScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#EEEEEE">

        <!--Month header -->
        <RelativeLayout
            android:id="@+id/monthHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <Button
                android:id="@+id/btnPrevMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:backgroundTint="#8F001A"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btnNextMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:backgroundTint="#8F001A"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!--Day header -->
        <RelativeLayout
            android:id="@+id/dayHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

