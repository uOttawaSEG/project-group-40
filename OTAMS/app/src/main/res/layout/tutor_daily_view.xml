                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

